<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Космический квест</title>
  <style>
    body {
      font-family: sans-serif;
      background: linear-gradient(to right, #000018, #001a33);
      color: #fff;
      text-align: center;
      padding: 2em;
    }
    .container {
      max-width: 600px;
      margin: auto;
      background: rgba(255, 255, 255, 0.05);
      padding: 2em;
      border-radius: 1em;
      box-shadow: 0 0 20px rgba(0,0,0,0.6);
    }
    input {
      padding: 0.5em;
      font-size: 1em;
      width: 60%;
      border: none;
      border-radius: 5px;
    }
    button {
      padding: 0.5em 1em;
      font-size: 1em;
      border: none;
      border-radius: 5px;
      background-color: #00bfff;
      color: white;
      margin-left: 0.5em;
      cursor: pointer;
    }
    .hint {
      margin-top: 1.5em;
      font-size: 1.2em;
      color: #00ffcc;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1 id="question">Загрузка вопроса...</h1>
    <input id="answer" placeholder="Введите ответ" />
    <button onclick="checkAnswer()">Ответить</button>
    <div id="result" class="hint"></div>
  </div>

  <script>
    // База данных вопросов и ответов
    const QUESTIONS = {
      mercury: {
        question: "Как назывался первый искусственный спутник Земли, запущенный в 1957 году?",
        answer: "спутник-1",
        hint: "Поищи у двери — туда первыми приходят ответы."
      },
      venus: {
        question: "Кто первым из людей полетел в космос?",
        answer: "юрий гагарин",
        hint: "Окно в космос открыто для тех, кто первым его увидел."
      },
      earth: {
        question: "Как называется международная станция, где работают космонавты разных стран?",
        answer: "мкс",
        hint: "Ты найдешь планету рядом с глобусом — домом всех людей."
      },
      mars: {
        question: "Как зовут марсоход NASA, который отправился на Марс в 2021 году?",
        answer: "perseverance",
        hint: "Ищи среди книг о науке — там, где живёт знание."
      },
      jupiter: {
        question: "Как называется самый мощный космический телескоп, запущенный в 2021 году?",
        answer: "джеймс уэбб",
        hint: "Посмотри на стол, где изучают звезды."
      },
      saturn: {
        question: "Как называется первая планета, вокруг которой был обнаружен кольцевой спутник?",
        answer: "сатурн",
        hint: "Круглый стол скрывает кольца."
      },
      uranus: {
        question: "Какой химический элемент часто используют в космических двигателях?",
        answer: "водород",
        hint: "Опыты рядом — ищи там."
      },
      neptune: {
        question: "Как называется самая далекая планета, исследованная зондом Voyager 2?",
        answer: "нептун",
        hint: "Где холодно, там ты и найдешь её."
      }
    };

    const planetKey = new URLSearchParams(window.location.search).get('planet');
    const current = QUESTIONS[planetKey?.toLowerCase()];

    const questionEl = document.getElementById('question');
    const resultEl = document.getElementById('result');

    if (current) {
      questionEl.innerText = current.question;
    } else {
      questionEl.innerText = 'Вопрос не найден. Попробуйте отсканировать другой QR-код.';
    }

    function checkAnswer() {
      const input = document.getElementById('answer').value.trim().toLowerCase();
      if (input === current.answer) {
        resultEl.innerText = current.hint;
      } else {
        resultEl.innerText = 'Неправильный ответ. Попробуй ещё раз!';
      }
    }
  </script>
</body>
</html>
